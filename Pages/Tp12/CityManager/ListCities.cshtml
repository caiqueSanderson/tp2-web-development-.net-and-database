@page
@model tp2_web_development_.net_and_database.Pages.Tp12.CityManager.ListCitiesModel
@{
	ViewData["Title"] = "Lista de Cidades Turísticas";
}

<style>
	body {
		background: linear-gradient(to right, #e0f7fa, #ffffff);
		font-family: 'Segoe UI', sans-serif;
	}

	.card {
		max-width: 500px;
		margin: 60px auto;
		padding: 30px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
	}

	h2 {
		font-weight: 600;
		margin-bottom: 25px;
		text-align: center;
		color: #00796b;
	}
</style>

<div class="card">
	<h2>Lista de Cidades Turísticas</h2>

	<ul>
		@foreach (var city in Model.Cities)
		{
			<li>
				<a asp-page="./CityDetails" asp-route-cityName="@city">@city</a>
			</li>
		}
		<li></li>
	</ul>
</div>
