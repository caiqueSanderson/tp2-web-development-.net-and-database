@page
@model tp2_web_development_.net_and_database.Pages.Tp7.CityManager.CreateMultipleCountriesModel
@{
	ViewData["Title"] = "Cadastrar Múltiplos Turistica";
}

<style>
	body {
		background: linear-gradient(to right, #e0f7fa, #ffffff);
		font-family: 'Segoe UI', sans-serif;
	}

	.form-card {
		max-width: 500px;
		margin: 60px auto;
		padding: 30px;
		background-color: white;
		border-radius: 15px;
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
	}

	h2 {
		font-weight: 600;
		margin-bottom: 25px;
		text-align: center;
		color: #00796b;
	}

	.btn-primary {
		background-color: #00796b;
		border: none;
		border-radius: 30px;
		padding: 10px 25px;
	}

		.btn-primary:hover {
			background-color: #004d40;
		}

	.alert-success {
		background-color: #d0f0e0;
		color: #2e7d32;
		border-radius: 10px;
	}
</style>

<div class="form-card">
	<h2>Cadastrar Múltiplos Países</h2>

	<form method="post">
		<table class="table">
			<thead>
				<tr>
					<th>Nome do País</th>
					<th>Código do País</th>
				</tr>
			</thead>

			<tbody>
				@for (int i = 0; i < Model.CountriesInput.Count; i++)
				{
					<tr>
						<td>
							<input asp-for="CountriesInput[@i].CountryName" class="form-control" placeholder="Ex: Brasil" />
							<span asp-validation-for="CountriesInput[@i].CountryName" class="text-danger"></span>
						</td>
						<td>
							<input asp-for="CountriesInput[@i].CountryCode" class="form-control" placeholder="Ex: BR" />
							<span asp-validation-for="CountriesInput[@i].CountryCode" class="text-danger"></span>
						</td>
					</tr>
				}
			</tbody>
		</table>

		<button type="submit" class="btn btn-primary">Salvar Países</button>

	</form>

	@if (Model.CreatedCountries != null && Model.CreatedCountries.Count > 0)
	{
		<div class="alert alert-success mt-4">
			<strong>Países cadastrados com sucesso!</strong>
			<ul>
				@foreach (var country in Model.CreatedCountries)
				{
					<li>@country.CountryName (@country.CountryCode)</li>
				}
			</ul>
		</div>
	}
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
